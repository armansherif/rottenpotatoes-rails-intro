-#  This file is app/views/movies/index.html.haml
%h2 All Movies

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th 
        %a{class: @movie_click}= link_to "Movie Title", movies_path(sort_by: 'title'), id: "title_header"
      %th 
        %a Rating
      %th
        %a{class: @date_click= link_to "Release Date", movies_path(sort_by: 'release_date'), id: "release_date_header"
      %th 
        %a More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
